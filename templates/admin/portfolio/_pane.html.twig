<h1>Portfolio</h1>
<hr>

<div class="mb-4">
    {{ form_start(form_portfolio) }}
        {{ form_widget(form_portfolio) }}
        <input class="form-control btn btn-primary" type="submit" value="Add"/>
    {{ form_end(form_portfolio) }}
</div>

<table class="table table-light table-striped table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th class="col-2 text-center">Image</th>
            <th class="col-4 text-center">Caption</th>
            <th class="col-1 text-center">Order</th>
            <th class="col-1 text-center">Edit</th>
            <th class="col-1 text-center">Delete</th>
        </tr>
    </thead>

    <tbody>
    {% for currentPortfolio in portfolios %}
        <tr>
            <td class="align-middle">{{ currentPortfolio.name }}</td>
            <td><img src="{{ asset(portfolio_directory ~ currentPortfolio.image) }}" alt="currentPortfolio.name" class="img-fluid"></td>
            <td class="align-middle">{{ currentPortfolio.caption }}</td>
            <td class="align-middle">{{ currentPortfolio.listOrder }}</td>
            <td class="text-center align-middle"><a href="{{ path('admin_portfolio_show', {'id': currentPortfolio.id}) }}" rel="noopener"><button type="button" class="btn btn-primary">Edit</button></a></td>
            <td class="text-center align-middle"><a href="{{ path('admin_portfolio_delete', {'id': currentPortfolio.id}) }}" rel="noopener"><button type="button" class="btn btn-danger" onclick="return confirm('Are you sure to delete it?')">Delete</button></a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>
